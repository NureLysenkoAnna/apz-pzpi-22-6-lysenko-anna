<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/bg_sensor_card"
    android:elevation="4dp"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSensorType"
        android:text="Назва сенсора"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#212121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSensorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус: Активний"
        android:textColor="#388E3C"
        android:textSize="15sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvSensorDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Встановлено: 2024-01-01"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />
</LinearLayout>